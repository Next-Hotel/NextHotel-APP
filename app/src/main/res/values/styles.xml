<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.Card">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Card.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.Card.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextView.Card.Top">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Card.Price">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.Detail">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Detail.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.Detail.Subtitle">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextView.Detail.Top">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Detail.Price">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>